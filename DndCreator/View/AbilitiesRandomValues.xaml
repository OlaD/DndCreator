<UserControl x:Class="DndCreator.View.AbilitiesRandomValues"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DndCreator.View"
             mc:Ignorable="d" d:DesignWidth="300" Height="70">
	<GroupBox x:Name="groupBox" 
												HorizontalAlignment="Left" 
												VerticalAlignment="Top" 
												Height="Auto" 
												Width="300"
												Header="Losuj wartości">
		<WrapPanel Margin="5,10,5,5">
			<WrapPanel.Resources>
				<Style TargetType="Label">
					<Setter Property="Width" Value="30"/>
					<Setter Property="HorizontalContentAlignment" Value="Center"/>
				</Style>
			</WrapPanel.Resources>
			<Button x:Name="Random" Content="Losuj" Width="75" Click="Random_Click"/>
			<Label x:Name="Value0" Content="-"/>
			<Label x:Name="Value1" Content="-"/>
			<Label x:Name="Value2" Content="-"/>
			<Label x:Name="Value3" Content="-"/>
			<Label x:Name="Value4" Content="-"/>
			<Label x:Name="Value5" Content="-"/>
		</WrapPanel>
	</GroupBox>
</UserControl>
