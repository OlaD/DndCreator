<UserControl x:Class="DndCreator.View.ClassGameRulesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DndCreator.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="51*"/>
			<ColumnDefinition Width="49*"/>
		</Grid.ColumnDefinitions>
		<StackPanel>
			<Label x:Name="label" Content="Atrybuty"/>
			<Label x:Name="label1" Content="..." Height="112"/>
			<Label x:Name="label2" Content="Charakter"/>
			<Label x:Name="label3" Content="..."/>
			<Label x:Name="label4" Content="Kostka Wytrzymałości"/>
			<Label x:Name="label5" Content="..."/>
			<Label x:Name="label6" Content="Początkowe złoto"/>
			<Label x:Name="label7" Content="..."/>
		</StackPanel>
		<StackPanel Grid.Column="1">
			<Label x:Name="label8" Content="Punkty umiejętności na 1 poziomie:"/>
			<Label x:Name="label9" Content="..."/>
			<Label x:Name="label10" Content="Punkty umiejętności na każdym następnym poziomie:"/>
			<Label x:Name="label11" Content="..."/>
			<Label x:Name="label12" Content="Umiejętności klasowe:"/>
			<ListBox x:Name="listBox" Height="100"/>
		</StackPanel>

	</Grid>
</UserControl>
