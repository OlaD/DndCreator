<UserControl x:Class="DndCreator.View.RaceDescriptionButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DndCreator.View"
             mc:Ignorable="d" Width="470.3" Height="104.887">
	<WrapPanel Margin="2.5, 2.5, 2.5, 2.5">
		<WrapPanel.Resources>
			<Style BasedOn="{StaticResource {x:Type ToggleButton}}" TargetType="RadioButton">
				<Setter Property="Margin" Value="2.5, 2.5, 2.5, 2.5"/>
				<Setter Property="Width" Value="150"/>
			</Style>
		</WrapPanel.Resources>
		<RadioButton x:Name="raceGeneralDescription" Content="Opis ogólny"/>
		<RadioButton x:Name="radioButton1" Content="Osobowość"/>
		<RadioButton x:Name="radioButton2" Content="Opis fizyczny"/>
		<RadioButton x:Name="radioButton3" Content="Relacje"/>
		<RadioButton x:Name="radioButton5" Content="Charakter"/>
		<RadioButton x:Name="radioButton6" Content="Krainy"/>
		<RadioButton x:Name="radioButton7" Content="Religia"/>
		<RadioButton x:Name="radioButton8" Content="Język"/>
		<RadioButton x:Name="radioButton9" Content="Imiona"/>
		<RadioButton x:Name="radioButton10" Content="Poszukiwacze przygód"/>
	</WrapPanel>
</UserControl>
